<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityTitle">
        <item name="android:textColor">#660066</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/activity_title</item>
        <item name="android:layout_marginEnd">8sp</item>
        <item name="android:layout_marginStart">8sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Image">
        <item name="android:layout_width">332sp</item>
        <item name="android:layout_height">266sp</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:layout_marginEnd">8sp</item>
    </style>

    <style name="Title">
        <item name="android:textColor">#660066</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8sp</item>
        <item name="android:layout_marginStart">8sp</item>
        <item name="android:layout_marginTop">8sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Location">
        <item name="android:textColor">#7e1b9d</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:layout_marginTop">8sp</item>
    </style>

    <style name="Distance">
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_marginEnd">8sp</item>
        <item name="android:textColor">#7e1b9d</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">0sp</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:layout_marginStart">8sp</item>
        <item name="android:layout_marginTop">4sp</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:layout_marginStart">8sp</item>
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/button_foreground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="NextButton">
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:layout_marginEnd">8sp</item>
        <item name="android:layout_marginStart">8sp</item>
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/button_foreground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8sp</item>
    </style>

</resources>
